<div class="container">
  <h1 class="center"> Welcome to Your Phone Book</h1>


    <div class='row'>
      <% @contacts.each do |cont| %>
      <div class='col s4'>
        <div class='card medium'>
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= cont.name %></span>
                <p>
                  <%= cont.phone %>
                  <%= cont.email %>
                  <%= cont.address %>
                </p> 
            </div>
            <div class="card-action">
              <a href="#">Edit</a>
              <a href="#">Delete</a>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
</div>