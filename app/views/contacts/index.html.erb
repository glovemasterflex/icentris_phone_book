
  <h1 class="center grey-text text-darken-3"> Welcome to The Phone Book</h1>
  <hr />
  <center><p class='btn green lighten-2'><%= link_to 'New Contact', new_contact_path, class: 'white-text' %></p></center>



    <div class='row'>
      <% @contacts.each do |cont| %>
      <div class='col s4'>
        <div class='card panel'>
          <div class="card light-blue darken-3">
            <div class="card-content black-text">
              <span class="card-title"><%= cont.name %></span>
                <p>
                  <%= cont.phone_number %><br>
                  <%= cont.email %><br>
                  <%= cont.address %><br>
                </p> 
            </div>
            <div class="card-action">
              <%= link_to 'Edit', edit_contact_path(cont), class: 'btn grey white-text' %>
              <%= link_to 'Delete', contact_path(cont), method: :delete, class: 'btn red lighten-2 white-text' %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
