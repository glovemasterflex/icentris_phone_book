<br>
<h1 class='center'>Edit Contact</h1>
<div class='row'>
  <div class='col s4 offset-s4'>
    <%= form_for @contact do |c| %>
      <%= c.label :name %>
      <%= c.text_field :name %>
    
      <%= c.label :phone_number %>
      <%= c.text_field :phone_number %>
    
      <%= c.label :email %>
      <%= c.text_field :email %>
    
      <%= c.label :address %>
      <%= c.text_field :address %>
    
      <%= c.submit class: 'btn yellow darken-1'%>
    <% end %>
  </div>
</div>
